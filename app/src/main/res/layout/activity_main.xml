<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.rumi.breathe.MainActivity">

    <ImageView
        android:layout_height="200dp"
        app:srcCompat="@drawable/breatheimg"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView"
        android:layout_width="200dp" />

    <TextView
        android:text="7 Breathe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:id="@+id/breatheTakentxt"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/imageView" />

    <TextView
        android:text="Last at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/breatheTakentxt"
        android:layout_alignStart="@+id/breatheTakentxt"
        android:layout_marginTop="18dp"
        android:id="@+id/lasttxt"
        android:layout_alignEnd="@+id/breatheTakentxt"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <TextView
        android:text="4 min today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lasttxt"
        android:layout_alignStart="@+id/lasttxt"
        android:layout_marginTop="24dp"
        android:id="@+id/todayMinutesTxt"
        android:textSize="18sp"
        android:textColor="@color/colorAccent" />

    <TextView
        android:text="1 minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/todayMinutesTxt"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="62dp"
        android:id="@+id/oneMinuteTxt"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <Button
        android:text="Start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/startBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorAccent"
        android:textColor="@android:color/background_light" />

    <TextView
        android:text="Breathe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:id="@+id/guideTxt"
        android:textSize="18sp"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold" />
</RelativeLayout>
